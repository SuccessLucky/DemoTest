<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/msg_topimage_rl"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginLeft="@dimen/margin_40px"
        android:layout_marginRight="@dimen/margin_40px"
        android:background="@drawable/selector_msg_bg_top" >

        <ImageView
            android:id="@+id/msg_topimage_im"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/msg_topimage_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:maxLines="2"
            android:background="#7f000000"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/margin_40px"
            android:paddingRight="@dimen/margin_40px"
            android:paddingTop="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_14sp" />
    </RelativeLayout>

</RelativeLayout>