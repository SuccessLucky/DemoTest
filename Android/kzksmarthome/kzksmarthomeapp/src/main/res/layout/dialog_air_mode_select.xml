<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/air_mode_select_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="0dp">

    <RelativeLayout
        android:id="@+id/air_mode_select_title_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/air_mode_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/hint_cannel"
            android:textColor="#3CB3ED"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/air_mode_str"
            android:textColor="@color/black_20"
            android:textSize="16sp" />
    </RelativeLayout>

    <View style="@style/horizontal_line" />

    <RelativeLayout
        android:id="@+id/air_mode_auto_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:background="@drawable/list_item_background">

        <ImageView
            android:id="@+id/air_mode_auto_iv"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:src="@drawable/smart_air_auto" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/air_mode_auto_iv"
            android:text="@string/air_wind_audo_str"
            android:textColor="@color/setting_black"
            android:textSize="14sp" />
    </RelativeLayout>

    <View style="@style/horizontal_line" />

    <RelativeLayout
        android:id="@+id/air_mode_cold_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:background="@drawable/list_item_background">

        <ImageView
            android:id="@+id/air_mode_cold_iv"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:src="@drawable/smart_air_cold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/air_mode_cold_iv"
            android:text="@string/air_mode_cold_str"
            android:textColor="@color/setting_black"
            android:textSize="14sp" />
    </RelativeLayout>

    <View style="@style/horizontal_line" />

    <RelativeLayout
        android:id="@+id/air_mode_hot_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:background="@drawable/list_item_background">

        <ImageView
            android:id="@+id/air_mode_hot_iv"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:src="@drawable/smart_air_hot" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/air_mode_hot_iv"
            android:text="@string/air_mode_hot_str"
            android:textColor="@color/setting_black"
            android:textSize="14sp" />
    </RelativeLayout>
    <View style="@style/horizontal_line" />

    <RelativeLayout
        android:id="@+id/air_mode_wind_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:background="@drawable/list_item_background">

        <ImageView
            android:id="@+id/air_mode_wind_iv"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:src="@drawable/smart_air_wind" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/air_mode_wind_iv"
            android:text="@string/air_mode_wind_str"
            android:textColor="@color/setting_black"
            android:textSize="14sp" />
    </RelativeLayout>
    <View style="@style/horizontal_line" />

    <RelativeLayout
        android:id="@+id/air_mode_xeransis_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:background="@drawable/list_item_background">

        <ImageView
            android:id="@+id/air_mode_xeransis_iv"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:src="@drawable/smart_air_humidify" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/air_mode_xeransis_iv"
            android:text="@string/air_mode_xeransis_str"
            android:textColor="@color/setting_black"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>