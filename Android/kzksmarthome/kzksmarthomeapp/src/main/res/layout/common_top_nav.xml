<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_rl"
    style="@style/titlebar"
    android:layout_width="match_parent" >

    <TextView
        android:id="@+id/top_back_tv"
        style="@style/back_item_tv_style"
        android:drawablePadding="5dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/top_title_tv"
        style="@style/title_textView"
        android:layout_centerInParent="true"
        android:gravity="center" />

    <RelativeLayout
        android:id="@+id/top_right_rl"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/topbar_left_with"
        android:clickable="true"
        android:gravity="center" >

        <TextView
            android:id="@+id/top_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/button_text_color_selector"
            android:textSize="@dimen/textsize_16sp" />

        <!--<ImageView
            android:id="@+id/top_right_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_big_jia"
            android:visibility="gone"/>-->
    </RelativeLayout>

</RelativeLayout>