<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/smart_user_list_item_rl"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/list_item_background">

    <ImageView
        android:id="@+id/smart_user_list_head_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/smart_setting_head" />

    <ImageView
        android:id="@+id/smart_user_list_role_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/smart_setting_admin" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/smart_user_list_role_iv"
        android:layout_toRightOf="@id/smart_user_list_head_iv"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/smart_user_list_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/smart_user_list_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/smart_user_list_name_tv"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        style="@style/horizontal_line"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="55dp" />

</RelativeLayout>