<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_bai_bg" >

    <TextView
        android:id="@+id/share_window_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/share_window_title_str"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_15sp" />

    <LinearLayout
        android:id="@+id/share_window_im_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/share_window_title"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/share_weixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_weixin" />

        <ImageView
            android:id="@+id/share_weixinpy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_pengyouquan" />

        <ImageView
            android:id="@+id/share_sina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_weibo" />

        <ImageView
            android:id="@+id/share_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_qq" />
    </LinearLayout>

    <Button
        android:id="@+id/share_cannel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/share_window_im_layout"
        android:layout_marginLeft="@dimen/margin_40px"
        android:layout_marginRight="@dimen/margin_40px"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_one_btn"
        android:text="@string/hint_cannel"
        android:textColor="@color/text_gary"
        android:gravity="center"
        android:textSize="@dimen/textsize_15sp" />

</RelativeLayout>